

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<title>@ViewData["Title"] - Вход</title>

<a class="btn-go-main" href="@Url.Action("Index", "Home")">&larr;На главную</a>

<div class="wrapper-login">
	<div class="container-login">
		<h1 class="login-title">Вход</h1>
		<form action="@Url.Action("Login","Account")" method="post">
			<div class="mb-3">
				<label for="exampleInputEmail1" class="form-label">Адрес электронной почты</label>
				<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="login">
				<div id="emailHelp" class="form-text">Мы никогда никому не передадим вашу электронную почту.</div>
			</div>
			<div class="mb-3">
				<label for="exampleInputPassword1" class="form-label">Пароль</label>
				<input type="password" class="form-control" id="exampleInputPassword1" name="password">
			</div>			
			<button type="submit" class="btn btn-primary">Войти</button>
			<a class="redirect-to-registration">Нет аккаунта? - <a class="none-decoration" href="@Url.Action("Register", "Account")">Зарегистрируйтесь!</a></a>
		</form>
	</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
